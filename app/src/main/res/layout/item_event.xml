<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_local_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/local_s_o_paulo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/excluir"
                android:textSize="12sp"
                android:background="@drawable/button_delete_background"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/evento_chuva_intensa"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/ic_weather"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_impact_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/impacto_severo"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/ic_warning"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_15_12_2024"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_affected_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pessoas_afetadas_1500"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_people"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 